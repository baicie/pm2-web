{
  "name": "@baicie/pm2-web",
  "version": "0.1.0",
  "description": "pm2 web server",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pnpm -r --filter=./client run build && pnpm -r --filter=./server run build",
    "server:client": "pnpm -r --filter=./client run preview",
    "server:server": "pnpm -r --filter=./server run prod",
    "server": "concurrently \"npm run server:client\" \"npm run server:server\""
  },
  "author": "",
  "files": [
    "scripts",
    "bin",
    "client/dist",
    "server/dist"
  ],
  "license": "MIT",
  "keywords": [
    "pm2 web"
  ],
  "bin": {
    "pm2-web": "bin/pm2-web"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/types": "^17.4.4",
    "lint-staged": "^13.1.2",
    "pnpm": "^7.27.1",
    "rimraf": "^4.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/baicie/pm2-web"
  },
  "src/**/*.{js,jsx,ts,tsx,vue}": [
    "eslint --cache --fix",
    "prettier --write"
  ]
}
